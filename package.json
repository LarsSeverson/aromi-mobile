{
  "name": "aromi",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "npx expo prebuild",
    "ios": "expo run:ios",
    "android": "expo run:android",
    "ios-dev": "concurrently --raw \"expo run:ios\" \"npm run codegen\"",
    "android-dev": "concurrently --raw \"expo run:android\" \"npm run codegen\"",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "codegen": "graphql-codegen --config src/scripts/codegen.ts",
    "codegen-watch": "graphql-codegen --config src/scripts/codegen.ts --watch"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@apollo/client": "^3.12.9",

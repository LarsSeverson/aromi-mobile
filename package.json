    "@rlemasquerier/react-native-keyboard-scrollview": "^0.2.1",
    "aws-amplify": "^6.13.2",
    "expo": "^52.0.37",
    "expo-asset": "~11.0.4",
    "expo-blur": "^14.0.3",
    "expo-constants": "~17.0.7",
    "expo-font": "~13.0.4",
    "expo-image": "~2.0.6",
    "expo-linking": "~7.0.5",
    "expo-router": "~4.0.17",
    "expo-splash-screen": "~0.29.22",
    "expo-status-bar": "~2.0.1",
    "graphql": "^16.10.0",
